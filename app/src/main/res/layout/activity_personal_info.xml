<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3F2F2"
        android:orientation="vertical"
        tools:context=".PersonalInfo.PersonalInfo">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_background">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="32dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_arrow_back" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/atoz_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanist_black"
                android:paddingStart="15dp"
                android:text="Personal Info"
                android:textColor="@color/login_textcolor"
                android:textSize="25dp"
                android:textStyle="bold" />


        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">
                                <ImageView
                                    android:id="@+id/iv_details"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_baseline_person_outline_24"
                                    android:layout_marginStart="5dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/iv_details"
                                    android:text="Personal Details"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:id="@+id/iv_edit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_baseline_edit_24"
                                    android:layout_marginStart="5dp"
                                    android:layout_alignParentRight="true"
                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_below="@+id/iv_details"
                                    android:layout_marginTop="3dp"
                                    android:background="@color/gryclr" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_firstname"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="First Name"
                                    android:textColor="@color/gryclr"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_fname"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_middlename"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Middle Name"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_mname"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_lastname"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Last Name"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_lname"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_phone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Phone"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_phone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_alphone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Alternate No"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:background="@color/white"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_alternatephone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    tools:ignore="TextFields" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_dob"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="DOB"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_dob"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_gender"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Gender"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_gender"
                                    android:singleLine="true"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_bldgrp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Blood Group"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_bloodgroup"
                                    android:singleLine="true"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Address"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:singleLine="false"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:gravity="top"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_paddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_paddress"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Permant Address"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_paddress"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:inputType="text"
                                    android:gravity="top"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_maritialstatus"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Maritual Status"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_maritualstatus"
                                    android:singleLine="true"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_qualification"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Qualification"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_qualification"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:inputType="text"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_skill"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Skill"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_skill"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:inputType="text"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_wrkexperience"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Work Experience"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_wrkexperience"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_doj"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Date of Joining"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_doj"
                                    android:textSize="14sp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_dept"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Department"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_dept"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <TextView
                                    android:id="@+id/lbl_designation"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.4"
                                    android:padding="5dp"
                                    android:text="Designation"
                                    android:textColor="@color/gryclr"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/tv_designation"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.6"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    />
                            </LinearLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="5dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp"
                        android:id="@+id/cv_documents">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp">
                                <ImageView
                                    android:id="@+id/iv_documentdetails"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ic_baseline_insert_drive_file_24"
                                    android:layout_marginStart="5dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Document Details"
                                    android:layout_toRightOf="@+id/iv_documentdetails"
                                    android:textSize="16sp"
                                    android:textStyle="bold"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:background="@color/gryclr"
                                    android:layout_marginTop="3dp"
                                    android:layout_below="@+id/iv_documentdetails"/>
                            </RelativeLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_documents"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>





                </LinearLayout>





            </ScrollView>



        </LinearLayout>

    </LinearLayout>