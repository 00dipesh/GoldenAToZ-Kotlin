<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_background"
        tools:context=".Feedback.FeedbackForm">

        <RelativeLayout
            android:id="@+id/rel_actionbar"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_background"
            android:padding="10dp">


            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_back"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:id="@+id/atoz_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/atoz_logo"

                />

            <TextView
                android:id="@+id/tv_action_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/atoz_logo"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/urbanist_black"
                android:padding="5dp"
                android:text="Feedback Form"
                android:textColor="@color/login_textcolor"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_alignStart="@id/atoz_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:text=" Enter Name"
                android:textColor="@color/gryclr"
                android:fontFamily="@font/urbanist_bold"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/ed_ename"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_drawable"
                android:hint="Name"
                android:inputType="text"
                android:fontFamily="@font/urbanist_black"
                android:textColor="@color/black"
                android:maxLength="50"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:gravity="top|start"/>

            <EditText
                android:id="@+id/ed_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:background="@drawable/edittext_drawable"
                android:fontFamily="@font/urbanist_bold"
                android:hint="Title"
                android:inputType="text"
                android:maxLength="300"
                android:paddingStart="10dp"
                android:paddingTop="14dp"
                android:gravity="top|start"/>

            <EditText
                android:id="@+id/ed_message"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:background="@drawable/edittext_drawable"
                android:hint="Message..."
                android:textColor="@color/black"
                android:inputType="text"
                android:maxLength="500"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:gravity="top|start"
                />


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Submit"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:fontFamily="@font/urbanist_bold"
                android:textColor="@color/white"
                android:background="@drawable/loginbutton_drawable"
                />

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>