<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SalarySlip.SalarySlip">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_background">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_arrow_back" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/atoz_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_black"
            android:paddingStart="20dp"
            android:text="Salary Slip"
            android:textColor="@color/login_textcolor"
            android:textSize="25dp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        app:cardElevation="5dp"
        android:padding="3dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_salaryslip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_nodata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="There is No Data Available"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/login_textcolor"
            android:textAlignment="center"
            android:layout_marginTop="100dp"
            android:visibility="gone"/>
    </androidx.cardview.widget.CardView>



</LinearLayout>
