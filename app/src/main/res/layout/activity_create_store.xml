<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="F3F2F2"
    tools:context=".StoreVisit.CreateStore">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar_background">

        <ImageView
            android:id="@+id/arro_back"
            android:layout_width="32dp"
            android:layout_height="33dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_arrow_back" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/atoz_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_black"
            android:paddingStart="13dp"
            android:text="Add Store"
            android:textColor="@color/login_textcolor"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_sync_data"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:src="@drawable/refresh_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:src="@drawable/camera_icon"
            android:visibility="gone" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:id="@+id/lin_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/urbanist_black"
                android:text="Enter Store Name"
                android:textColor="@color/gryclr"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_SvStoreName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_drawable"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="top|start"
                android:hint="Enter StoreName Here.."
                android:inputType="text"
                android:maxLength="100"
                android:paddingStart="15dp"
                android:paddingTop="12dp"
                android:textColor="@color/black"
                android:textStyle="bold" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/urbanist_black"
                android:text="Store Type"
                android:textColor="@color/gryclr"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Spinner to display the dropdown -->
            <Spinner
                android:id="@+id/spinner_SvType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_background"
                android:textAlignment="center" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TurnOver:"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/urbanist_black"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="6sp"
                android:textColor="@color/gryclr"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/ed_SvTurnOver"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_drawable"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="top|start"
                android:hint="Store TurnOver"
                android:paddingTop="15dp"
                android:paddingStart="10dp"
                android:inputType="text"
                android:maxLength="100"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gst No:"
                android:fontFamily="@font/urbanist_black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/ed_SvGSTno"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter GST No:"
                android:background="@drawable/edittext_drawable"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="top|start"
                android:paddingStart="15dp"
                android:paddingTop="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:maxLength="50"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/urbanist_black"
                android:text="Enter Phone No:"
                android:textColor="@color/gryclr"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/ed_SvPhoneNo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_drawable"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="top|start"
                android:hint="Enter PhoneNo Here.."
                android:inputType="phone"
                android:maxLength="12"
                android:paddingStart="15dp"
                android:paddingTop="12dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/urbanist_black"
                android:text="Enter Email ID:"
                android:textColor="@color/gryclr"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_SvEmailId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_drawable"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="top|start"
                android:hint="Enter Email Id Here.."
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:paddingStart="15dp"
                android:paddingTop="12dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/urbanist_black"
                android:text="Enter Address:"
                android:textColor="@color/gryclr"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_SvAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_drawable"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="top|start"
                android:hint="Enter Address Here.."
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:paddingStart="15dp"
                android:paddingTop="12dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/urbanist_black"
                android:text="Select State"
                android:textColor="@color/gryclr"
                android:textSize="15sp"
                android:textStyle="bold" />
            <!-- Spinner to display the dropdown -->

            <Spinner
                android:id="@+id/spinner_SvState"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_background"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/urbanist_black"
                android:text="Select City"
                android:textColor="@color/gryclr"
                android:textSize="15sp"
                android:textStyle="bold" />
            <!-- Spinner to display the dropdown -->

            <Spinner
                android:id="@+id/spinner_SvCity"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_background"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/urbanist_black"
                android:text="Enter Discription:"
                android:textColor="@color/gryclr"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_SvDisc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_drawable"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="top|start"
                android:hint="Discription"
                android:inputType="text"
                android:maxLength="100"
                android:paddingStart="15dp"
                android:paddingTop="12dp"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_SvCreate"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/spinner_drawable"
                android:backgroundTint="@color/blue"
                android:text="Create Store"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />



        </LinearLayout>
    </ScrollView>


</RelativeLayout>