<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:contentPadding="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ch_selectitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Product Name"
                android:textColor="@color/gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_product_name"
                android:layout_marginTop="5dp"
                android:background="@drawable/added_offer_background"
                android:padding="3dp"
                android:text=" ₹ 10 off "
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_offerprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_offer"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:text="₹10.00"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_offer"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_offerprice"
                android:padding="3dp"
                android:text="MRP : ₹20.00"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_below="@+id/tv_offerprice"
                android:layout_marginTop="5dp"
                android:background="@drawable/cart_quantity_background">

               <TextView
                   android:id="@+id/tv_minusproduct"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="-"
                   android:layout_weight="1"
                   android:background="#C5C3C4"
                   android:textColor="@color/black"
                   android:textAlignment="center"
                   android:textStyle="bold"
                   android:textSize="20dp"
                   android:padding="5dp"/>

                <TextView
                    android:id="@+id/tv_addqty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:layout_weight="1"
                    android:textColor="@color/login_textcolor"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/tv_plusproduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_weight="1"
                    android:background="#C5C3C4"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:padding="5dp"/>
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>