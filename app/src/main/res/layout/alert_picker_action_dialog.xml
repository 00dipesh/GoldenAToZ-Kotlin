<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="Select Image"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@color/txtclr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_camera"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:text="Camera"
            android:drawableStart="@drawable/ic_baseline_camera_alt_24"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:clickable="true"/>
        <View
            android:layout_width="match_parent"
            android:background="#D4D4D4"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_gallery"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Gallery"
            android:drawableStart="@drawable/ic_baseline_insert_photo_24"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:clickable="true"/>
        <View
            android:layout_width="match_parent"
            android:background="#D4D4D4"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_pdf"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="PDF"
            android:drawableStart="@drawable/ic_baseline_file_copy_24"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:clickable="true"/>

        <View
            android:layout_width="match_parent"
            android:background="#D4D4D4"
            android:layout_height="1dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:onClick="onClick"
        android:clickable="true"/>
</FrameLayout>