<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/app_background"
        tools:context=".MyProfile.MyProfile">

        <View
            android:id="@+id/view_head"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/background_myprofile"
            android:visibility="gone"
            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_background">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="32dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_arrow_back" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/atoz_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/urbanist_black"
                android:paddingStart="20dp"
                android:text="Profile"
                android:textColor="@color/login_textcolor"
                android:textSize="25dp"
                android:textStyle="bold" />


        </androidx.appcompat.widget.Toolbar>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/iv_userprofile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/imgnotfound"
            app:civ_border_color="@color/black"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_userprofile"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/urbanist_bold"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/dark_gray"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_personalinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="Personal Info"
                    android:textStyle="bold"
                    android:paddingStart="50dp"
                    android:background="@drawable/background_myprofile"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/gryclr"
                    android:fontFamily="@font/urbanist_bold"
                    />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignTop="@id/tv_personalinfo"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignStart="@id/tv_personalinfo"
                    android:background="@drawable/personalinfo_img"/>
            </RelativeLayout>

            <View
                android:id="@+id/pinfo_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/bluegrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="Id Card"
                    android:textStyle="bold"
                    android:background="@drawable/background_myprofile"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="textStart"
                    android:paddingStart="50dp"
                    android:textColor="@color/gryclr"
                    android:fontFamily="@font/urbanist_bold"
                    />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignStart="@id/tv_idcard"
                    android:layout_alignTop="@id/tv_idcard"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/idcard_img" />
            </RelativeLayout>

            <View
                android:id="@+id/idcard_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/bluegrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_visitingcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="Visiting Card"
                    android:textStyle="bold"
                    android:background="@drawable/background_myprofile"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="textStart"
                    android:paddingStart="50dp"
                    android:textColor="@color/gryclr"
                    android:fontFamily="@font/urbanist_bold"
                    />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignStart="@id/tv_visitingcard"
                    android:layout_alignTop="@id/tv_visitingcard"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/visiting_card_img" />
            </RelativeLayout>

            <View
                android:id="@+id/visitingcard_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/bluegrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_changepswd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="Change Password"
                    android:textStyle="bold"
                    android:background="@drawable/background_myprofile"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="textStart"
                    android:paddingStart="50dp"
                    android:textColor="@color/gryclr"
                    android:fontFamily="@font/urbanist_bold"

                    />


                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignStart="@id/tv_changepswd"
                    android:layout_alignTop="@id/tv_changepswd"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/change_password_img" />
            </RelativeLayout>

            <View
                android:id="@+id/changepassword_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/bluegrey" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_salaryslip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="Salary Slip"
                    android:textStyle="bold"
                    android:background="@drawable/background_myprofile"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="textStart"
                    android:paddingStart="50dp"
                    android:textColor="@color/gryclr"
                    android:fontFamily="@font/urbanist_bold"

                    />


                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignStart="@id/tv_salaryslip"
                    android:layout_alignTop="@id/tv_salaryslip"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/baseline_attach_money_24" />
            </RelativeLayout>

            <View
                android:id="@+id/salary_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/bluegrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_myprofile"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/urbanist_bold"
                    android:padding="10dp"
                    android:paddingStart="50dp"
                    android:text="Feedback"
                    android:textAlignment="textStart"
                    android:textColor="@color/gryclr"
                    android:textStyle="bold"

                    />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignStart="@id/tv_feedback"
                    android:layout_alignTop="@id/tv_feedback"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/feedback_img" />
            </RelativeLayout>

            <View
                android:id="@+id/feedback_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/bluegrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_helpdesk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="Help Desk"
                    android:textStyle="bold"
                    android:background="@drawable/background_myprofile"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="textStart"
                    android:paddingStart="50dp"
                    android:textColor="@color/gryclr"
                    android:fontFamily="@font/urbanist_bold"
                    />



                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignStart="@id/tv_helpdesk"
                    android:layout_alignTop="@id/tv_helpdesk"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/help_img" />
            </RelativeLayout>

            <View
                android:id="@+id/helpdesk_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/bluegrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_complaint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="Complaint"
                    android:textStyle="bold"
                    android:background="@drawable/background_myprofile"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="textStart"
                    android:paddingStart="50dp"
                    android:textColor="@color/gryclr"
                    android:fontFamily="@font/urbanist_bold"
                    />

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignStart="@id/tv_complaint"
                    android:layout_alignTop="@id/tv_complaint"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/complaint_img" />
            </RelativeLayout>


            <View
                android:id="@+id/complaint_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="@color/bluegrey" />

        </LinearLayout>

    </RelativeLayout>