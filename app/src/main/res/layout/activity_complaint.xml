<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_background"
        tools:context=".Complaint.ComplaintActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/rel_actionbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_background"
            app:layout_constraintTop_toTopOf="parent"

            >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="32dp"
                android:layout_height="33dp"
                android:background="@drawable/ic_arrow_back"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"/>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/atoz_logo" />


            <TextView android:id="@+id/tv_action_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:padding="5dp"
                android:text="Complaint"
                android:textColor="@color/login_textcolor"
                android:fontFamily="@font/urbanist_black"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.Toolbar>



        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:text="Complaint / Suggestion"
                android:textColor="@color/gryclr"
                android:fontFamily="@font/urbanist_bold"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/ed_cname"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="16dp"
                android:background="@drawable/edittext_drawable"
                android:hint="Enter Here.."
                android:fontFamily="@font/urbanist_medium"
                android:inputType="text"
                android:textColor="@color/black"
                android:maxLength="100"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:gravity="top|start"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="5dp"
                android:text="Complaint Type"
                android:textColor="@color/gryclr"
                android:fontFamily="@font/urbanist_bold"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/ed_ctype"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="16dp"
                android:background="@drawable/edittext_drawable"
                android:fontFamily="@font/urbanist_medium"
                android:hint="Complaint Type"
                android:inputType="text"
                android:maxLength="300"
                android:paddingStart="10dp"
                android:gravity="center_vertical"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="5dp"
                android:text="Message"
                android:textColor="@color/gryclr"
                android:fontFamily="@font/urbanist_bold"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/ed_message"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:background="@drawable/edittext_drawable"
                android:hint="Message"
                android:fontFamily="@font/urbanist_medium"
                android:inputType="text"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:maxLength="500"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:gravity="top|start"
                />


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Submit"
                android:fontFamily="@font/urbanist_bold"
                android:textColor="@color/white"
                android:background="@drawable/loginbutton_drawable"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>